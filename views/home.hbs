

<section id="subheader" class="panel">
    <h3 class="user-panel-heading">
        WHO DON'T HAVE ANY FAVOURITES?
    </h3>

    <div class="threeFavouriteThings">
        <!-- loop through all our team members and put their info on the page -->
        {{#each dessert}}<!-- like a js for Each loop -->
        <div class="user-panel">
            <img class="i-image" src="images/{{Image}}" alt="image">

            <a class="dessert-link" href="{{ID}}">
            <button class="readm-button">READ MORE</button>
            </a>
            
            <h2>{{ Title }}</h2>
            <h3>{{ Dessert }}</h3>
            <p class="short-des">{{Description}}</p>
            

        </div>
        {{/each}}

    </div>
    </div>

    <!-- this will be filled in on the client side when we render our AJAX data -->
    <section class="lightbox">
        <span class="close">x</span>
        <div class="sidebar">
            <img src="" alt="larger dessert image">
        </div>

        <div class="lb-content">
         <!--render the database content here  -->
        </div>
        
    </section>
</section>
